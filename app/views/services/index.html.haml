- title('Services')
- stylesheet('services')
- javascript('services')

.span-16
  .span-15.append-2
    .span-15.prepend-1.last.mat.padding-top-10.padding-bottom-10
      %h2== Services
      
      -# must have 'create users' privilege to add a customer
      - if has_privilege?('create services', current_company)
        %span{:style => 'padding-left: 5px; font-size: 1.1em;'}= link_to 'Add a Service', new_service_path, :class => 'service add'
    
    %hr.space
    
    -# show flash messages
    .span-14.prepend-1.last
      = display_flash
      
    #services
      = render(:partial => 'services', :locals => {:services => @services})
    

.span-8.last
  -# services help
  .span-7.prepend-1.last
    = render(:partial => 'services_help')
