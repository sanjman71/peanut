- @service = service
- form_for(@service, :url => submit_url, :method => :post) do |f|
  = hidden_field_tag "service[mark_as]", 'work'
  
  .span-23.prepend-1.last.mat.padding-bottom-20.padding-top-10
    %h3{:style => 'font-size: 2.0em;'}= title
  
  %hr.space
  
  .span-14.prepend-1.last
    = display_flash(:all)

  - unless @service.errors.blank?
    .span-14.prepend-1.last
      .notice= error_messages_for('service', :header_message => nil)

  -# name
  .span-19.prepend-1.last
    .span-3.label.block.margin-top-10
      %h4.bigger.block.bottom= label_tag "service_name", "Name"
    .span-16.last
      = f.text_field :name, :class => 'text title big', :size => 30
  
  -# price
  .span-19.prepend-1.last
    .span-3.label.block.margin-top-10
      %h4.bigger.block.bottom= label_tag "service_price", "Price"
    .span-16.last
      = f.text_field :price, :class => 'text big', :style => "width: 100px;"

  -# duration
  .span-19.prepend-1.last.padding-bottom-10
    .span-3.label.block.margin-top-10
      %h4.bigger.block.bottom= label_tag "service_duration", "Duration"
    .span-16.last.bottom
      = f.text_field :duration_in_minutes, :class => 'text big', :style => "width: 100px;"
      %b== &nbsp;Minutes
    .span-16.prepend-3.last
      %em== An accurate duration allows appointments to be scheduled efficiently
    
  -# capacity
  .span-19.prepend-1.last.padding-bottom-10
    .span-3.label.block.margin-top-10
      %h4.bigger.block.bottom= label_tag "capacity", "Capacity"
    .span-16.last
      = f.text_field :capacity, :class => 'text big', :style => "width: 100px;"
    .span-16.prepend-3.last
      %em== Advanced: Capacity is typically 1, and must be a number 1 or greater

  .span-19.prepend-1.last.submit
    = submit_tag(action)
    == or
    = link_to "Cancel", services_path(:subdomain => current_subdomain), :class => 'admin'