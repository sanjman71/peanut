- title('Invitations')

.span-16
  .span-15.prepend-1.mat.padding-top-10.padding-bottom-10
    %h3== My Invitations
    %h5== #{@invitations.size} Invitations sent
    %h5.bottom
      = link_to 'Invite a user', new_invitation_path, :class => 'admin'
      == &nbsp;|&nbsp;
      = link_to 'Back', providers_path, :class => 'admin'

  %hr.space

  .span-15.prepend-1
    = display_flash(:all)

  %hr.space

  - @invitations.each do |invitation|
    .span-16.last.letterbox{:class => cycle("shaded", "")}[invitation]
      -# invitation recipient
      .span-6.prepend-1.name
        %h2.bottom= invitation.recipient_email
      
      .span-6.sent
        %h5.padding-top-5.bottom
          - unless invitation.sent_at.blank?
            = invitation.sent_at.to_s(:appt_day_date_time)

      .span-2.prepend-1.last
        - if invitation.claimed?
          %h5== Claimed
        - else
          = link_to 'Resend', resend_invitation_path(invitation), :class => 'admin'
    
.span-8.last
  -# help
  .span-7.prepend-1.last
    = render(:partial => 'invitations_help')
