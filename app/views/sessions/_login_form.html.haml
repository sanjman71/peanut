.span-12.mat
  .span-11.prepend-1.last
    .span-10.last
      %h2== Log In
      %hr
    - form_tag login_path do
      .span-11.last.padding-bottom-10
        .span-3
          %h3.text-align-right.select_label== Email:
        .span-8.last
          = text_field_tag 'email', @email, :class => 'title big', :style => 'width: 250px; margin: 0px;'
      .span-11.last.padding-bottom-10
        .span-3
          %h3.text-align-right.select_label== Password:
        .span-8.last
          = password_field_tag 'password', nil, :class => 'title big', :style => 'width: 250px; margin: 0px;'

      .span-10.prepend-1.last
        = submit_tag 'Log in', :name => nil, :style => 'font-size: 15px;'
  
      -# Uncomment this if you want this functionality
      -#= label_tag 'remember_me', 'Remember me'
      -#= check_box_tag 'remember_me', '1', @remember_me
