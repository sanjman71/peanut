- title(@title)
- javascript('reports')

.span-23.prepend-1.mat.padding-top-10.padding-bottom-10
  .span-.23.last
    %h2.bottom== Custom Report
  .span-23.last.padding-top-5
    -#%h4
      -#= link_to 'New Date Range', '', :class => 'admin'
      -#== &nbsp;|&nbsp;
      -#= link_to 'New Report', reports_path, :class => 'admin'
    -#%span{:style => 'padding-left: 10px; font-size: 0.5em;'}= link_to 'Back to Reports', reports_path
  .span-23.last#today
    %h4== Today is #{Time.now.to_s(:appt_day)}
  .span-23.last#report_when
    .span-1.text-align-right
      %h5{:style => 'color: #0000BB;'}== When:
    .span-22.last
      %h4== #{@start_date.to_s(:appt_short_month_day_year)} - #{@end_date.to_s(:appt_short_month_day_year)}
  .span-23.last#report_for
    .span-1.text-align-right
      %h5{:style => 'color: #0000BB;'}== For:
    .span-22.last
      %h4= @text

%hr.space

.span-23.prepend-1#pagination
  .span-8
    %h4= page_entries_info(@appointments, :entry_name => 'appointment')
  .span-15.last
    %h4= will_paginate(@appointments)

.span-24#appointments
  = render(:partial => 'appointments/customer_appointments', :locals => {:appointments => @appointments})
  
