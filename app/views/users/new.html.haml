- title(@title)
- javascript('users')

- if @error_message
  .span-23.prepend-1.mat.padding-bottom-10
    %h2= @error_message
    %h4{:style => 'font-size: 1.5em;'}== Please check your invitation and try again
- else
  - submit_url = url_for(:controller => 'users', :action => 'create', :role => @role, :return_to => @return_to, :subdomain => current_subdomain)
  = render :partial => 'users/user_form', |
           :locals => {:role => @role, :invitation => @invitation, |
           :user_password => current_company.preferences[:customer_password], |
           :user_email => current_company.preferences[:customer_email], |
           :user_phone => current_company.preferences[:customer_phone], |
           :submit_url => submit_url, :title_text => @title, :submit_text => 'Create', :back_path => @back_path} |
