- title('Reset Password')

.span-14.prepend-1.last
  = display_flash

.span-24.last.mat.padding-top-10.padding-bottom-10
  .span-20.prepend-1.last
    %h2== Type in your email below and a new password will be sent to you.
    %hr

  - form_tag(password_reset_path) do
    .span-12.last.padding-bottom-10
      .span-3
        %h3.text-align-right.select_label== Email:
      .span-9.last
        = text_field_tag 'email', @email, :class => 'title big', :style => 'width: 300px; margin: 0px;'
