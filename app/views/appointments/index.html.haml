- title(@title)
- stylesheet('appointments')
- javascript('appointments')

.span-24
  .span-23.prepend-1.mat.padding-top-10.padding-bottom-10
    .span-23.last
      .span-5
        %h2= @title
      .span-18.last{:style => 'padding-top: 7px;'}
        = link_to 'Upcoming', url_for(:type => 'work', :state => 'upcoming', :subdomain => current_subdomain)
        == &nbsp;|&nbsp;
        = link_to 'Completed', url_for(:type => 'work', :state => 'completed', :subdomain => current_subdomain)
    .span-23.last
      %h3== Today is #{Time.now.to_s(:appt_day)}
    
  %hr.space
  
  .span-23.prepend-1
    %h3== #{pluralize(@appointments.size, 'appointment')}
    
  = render(:partial => 'customer_appointments', :locals => {:appointments => @appointments})