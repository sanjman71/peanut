- appointments.each do |appointment|
  .span-24.last.letterbox.appointment{:class => cycle("shaded", "")}
    -# service and schedulable
    .span-5.prepend-1
      %h3{:style => 'padding-top: 5px; margin-bottom: 5px;'}= appointment.service.name
      %h3{:style => 'font-size: 1.3em;'}= (appointment.schedulable || User.anyone).name
      
    -# when
    .span-10
      %h4{:style => 'padding-top: 5px;'}
        = appointment.start_at.to_s(:appt_short_month_day_year)
        == @
        = appointment.start_at.to_s(:appt_time)
        %br
        %em= distance_of_time_in_words_to_now(appointment.start_at) + (Time.now > appointment.start_at ? " ago" : " from now")
      
    -# appointment details
    .span-3{:style => 'margin-top: 3px;'}
      = link_to 'Details', url_for(:controller => 'appointments', :action => appointment.mark_as, :id => appointment.id, :subdomain => current_subdomain)
  
    
