<% unless free_appointments.blank? %>
  <% # show appointments by day %>
  <p />
  <% free_appointment_days.each do |day, appointments| %>
    <h3><%= day.to_s(:appt_day) %></h3>  
    <table>
      <% appointments.each do |appointment| %>
        <tr>
          <% appointment.customer_id = nil %>
          <%= link_to appointment.start_at.to_s(:appt_time), confirm_appointments_path(:subdomain => @subdomain, :appointment => appointment.attributes), {:method => :post} %>
        </tr>
      <% end # appointments %>
    </table>
  <% end # free appointments %>
<% end %>