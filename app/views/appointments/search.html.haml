- javascript('appointments')

.span-20.last.box
  - form_tag(search_appointments_path(:subdomain => @subdomain), :method => :post, :id => "search_appointments_form") do |f|
    = label_tag "appointment_code", "Find an appointment by typing a confirmation code", :class => 'big'
    %br
    = text_field('appointment', 'code', :value => @code, :class => 'title big')
    == &nbsp;
    = submit_tag 'Search', :name => nil, :class => 'submit', :style => 'font-size: 15px;'
    
.span-20.last
  %span.code#message
    = @error_message
