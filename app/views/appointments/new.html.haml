.span-17
  .span-17.last.box
    %h3
      .span-2.padding-bottom-5
        == What:
      .span-14.padding-bottom-5.last
        = @appointment.service.name
      .span-2.padding-bottom-5
        == With:
      .span-14.padding-bottom-5.last{:style => 'padding-bottom: 5px;'}
        = (@appointment.resource || Person.anyone).name
      .span-2.padding-bottom-5
        == When:
      .span-14.padding-bottom-5.last{:style => 'padding-bottom: 5px;'}
        - if @appointment.waitlist?
          == #{@appointment.time.titleize}, #{@appointment.when.titleize}
        - else
          = @appointment.start_at.to_s(:appt_day_date_time)

  .span-15.prepend-1
    %h3
      - if @appointment.waitlist?
        == Before we confirm you on the waitlist, we need some information about you.
      - else
        == Before we finalize your appointment, we need some information about you. 
    %p
    .schedule_form
      - url = @appointment.waitlist? ? waitlist_path(:subdomain => @subdomain) : schedule_path(:subdomain => @subdomain) 
      - form_for(@appointment, :url => url) do |f|
        - fields_for("appointment[customer_attributes]", @appointment.customer) do |customer_form|
          .span-16.last
            .span-4
              %h2.text-align-right== Name:
            .span-12.last
              = customer_form.text_field :name, :class => 'title', :style => 'width: 250px; margin: 0px;'
          .span-16.last
            .span-4
              %h2.text-align-right== Email:
            .span-12.last
              = customer_form.text_field :email, :class => 'title', :style => 'width: 250px; margin: 0px;'
          .span-16.last
            .span-4
              %h2.text-align-right== Phone:
            .span-12.last
              = customer_form.text_field :phone, :class => 'title', :style => 'width: 250px; margin: 0px;'
          .span-16.last
            .span-4
              %h2.text-align-right== Mobile Carrier:
            .span-12.last
              = customer_form.select('mobile_carrier_id', MobileCarrier.all.collect{ |c| [c.name, c.id]}, {}, :style => 'font-size: 15px;')
          .span-12.prepend-4.last.top
            %em{:style => "color: #666666; font-size: 13px;"}== Specifying your mobile carrier is optional.  It is used to notify you of appointment changes via text message.
                          
          %hr.space
          
          .span-16.last
            = f.submit "Confirm", :style => 'font-size: 15px;'
        
        
        
    
