- customers.each do |customer|
  .span-24.last.customer.letterbox{:class => cycle("shaded", "")}[customer]
    .span-6.prepend-1
      %h2.name{:style => 'margin-bottom: 2px;'}= link_to customer.name, customer_path(customer, :subdomain => current_subdomain), :class => 'customer name'
      %span.customer.email{:style => 'font-size: 1.3em;'}= customer.email
    .span-3
      %h3.customer.phone= number_to_phone(customer.phone)
    .span-5
      %h4{:class => customer.sms? ? 'customer sms' : 'customer nosms'}= customer.sms? ? "Text messaging enabled" : "No text messaging"
    .span-3
      %h4= link_to "Appointments", customer_appointments_path(customer), :class => 'admin'
    .span-6.last
      -# allow company managers or edit all users, and user to edit himself
      - if @company_manager or customer == current_user
        = link_to "Edit", url_for(:controller =>'customers', :action => 'edit', :id => customer.id, :subdomain => current_subdomain), :class => 'admin'
        == &nbsp;
        = link_to 'Reset Password', url_for(:controller => 'users', :id => customer.id, :action => 'notify', :type => 'reset', :subdomain => current_subdomain), :class => 'admin'