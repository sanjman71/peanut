- title("Customers")
- stylesheet('users')
- javascript('customers')

.span-16
  .span-15.prepend-1.last.mat.padding-top-10.padding-bottom-20
    = label_tag "live_search_for_customers", "Find a customer by typing their name, email address or phone number", :class => 'big'
    -# must have 'create users' privilege to add a customer
    %br
    .span-15.last
      = text_field("customer", "name", :autocomplete => "off", :id => 'live_search_for_customers', :class => 'title big', :url => customers_path(:subdomain => current_subdomain))
      %span#search_progress.hide{:style => 'padding-left: 5px;'}= image_tag 'dots.gif'
    .span-15.last
    - if has_privilege?('create users', current_company)
      %span{:style => 'padding-left: 5px; font-size: 1.1em;'}= link_to 'Add a Customer', customer_new_path, :class => 'customer add'

  %hr.space

  .span-14.prepend-1.last
    = display_flash

  .span-16.last.padding-bottom-20
    #customers_pagination
      = render(:partial => 'customers_pagination', :locals => {:customers => @customers, :search_text => @search_text, :paginate => @paginate})
    #customers
      = render(:partial => 'customers', :locals => {:customers => @customers})
    
.span-8.last
  -# customer help
  .span-7.prepend-1.last
    = render(:partial => 'customer_help')
