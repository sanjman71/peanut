.events_subset
  - if events.blank?
    No events
  - else
    - events.each do |event|
      .span-22.last.letterbox.event{:class => cycle("shaded #{event.type}", "#{event.type}")}[event]
        .span-4.user
          == By #{event.user.name}
        .span-4.user
          - unless event.customer.blank?
            == Customer: #{event.customer.name}
          - else
            == No customer
        .span-7.message
          = event.message
        .span-4.eventable
          - unless event.eventable.blank?
            = link_to(event.eventable_type, url_for(:subdomain => current_subdomain, :controller => event.eventable_type, :action => 'show', :id => event.eventable_id))
          - else
            == No event owner
        
        .span-3.seen.last
          - if event.seen?
            == Seen
          - else
            = link_to('Mark as seen', url_for(:subdomain => current_subdomain, :controller => 'events', :action => 'mark_as_seen', :id => event.id), :method => 'post')
