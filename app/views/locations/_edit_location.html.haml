.location
  - form_for @location, :url => submit_url, :html => {:id => 'edit_location_form'} do |form|
    .span-20.last
      .span-4.prepend-1
        %h3= form.label :name, "Name:"
      .span-15.last
        = form.text_field :name, :style => 'font-size: 15px'
    .span-20.last
      .span-4.prepend-1
        %h3= form.label :street_addr, "Street Address:"
      .span-15.last
        = form.text_field :street_addr, :style => 'font-size: 15px'
    .span-20.last
      .span-4.prepend-1
        %h3= form.label :city, "City:"
      .span-15.last
        = form.text_field :city, :size => 40
    .span-20.last
      .span-4.prepend-1
        %h3= form.label :state, "State:"
      .span-15.last
        = form.text_field :state, :size => 20
    .span-20.last
      .span-4.prepend-1
        %h3= form.label :zip, "Zip:"
      .span-15.last
        = form.text_field :zip, :size => 10
    .span-20.last
      .span-4.prepend-1
        %h3= form.label :country, "Country:"
      .span-15.last
        = form.select(:country, Location::COUNTRIES)
    .span-20.last
      .span-4.prepend-1
        %h3= form.label :phone, "Phone Number:"
      .span-15.last
        = form.text_field :phone, :size => 10
    .span-20.last
      .span-4.prepend-1
        %h3= form.label :email, "Email:"
      .span-15.last
        = form.text_field :email, :size => 10
    .span-20.last
      .span-4.prepend-1
        %h3= form.label :notes, "Notes:"
      .span-15.last
        = form.text_area :notes, :size => '40x3'
        
    %hr.space
    
    .span-20.prepend-1.last
      = submit_tag form_submit || 'Submit', :class => 'big button'
      == or
      = link_to 'Cancel', edit_company_path(current_company, :subdomain => current_subdomain)
