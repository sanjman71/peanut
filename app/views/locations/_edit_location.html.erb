<div id='locations'>
  <%
    form_path ||= locations_url
    form_method ||= :get
    form_submit ||= 'Submit'
    user_location ||= !@user.nil?
  %>
  <% form_for @location, :url => form_path,
        :html => {:id => 'edit_location_form', :method => form_method} do |form| %>

    <table>
      <tr>
        <td><%= form.label :location_name, "Location name:" %></td>
        <td><%= form.text_field :location_name, :size => 40 %></td>
      </tr>
      <tr>
        <td><%= form.label :street_addr, "Street Addr:"%></td>
        <td><%= form.text_field :street_addr, :size => 40 %></td>
      </tr>
      <tr>
        <td><%= form.label :city, "City:" %></td>
        <td><%= form.text_field :city, :size => 40 %></td>
      </tr>
      <tr>
        <td><%= form.label :state, "State:" %></td>
        <td><%= form.text_field :state, :size => 20 %></td>
      </tr>
      <tr>
        <td><%= form.label :zip, "ZIP:" %></td>
        <td><%= form.text_field :zip, :size => 10 %></td>
      </tr>
      <tr>
        <td><%= form.label :country, "Country:" %></td>
        <td><%= form.select(:country, Location::COUNTRIES) %></td>
      </tr>
      <tr>
        <td><%= form.label :phone, "Location Phone:" %></td>
        <td><%= form.text_field :phone, :size => 10 %></td>
      </tr>
      <tr>
        <td><%= form.label :email, "Location Email:" %></td>
        <td><%= form.text_field :email, :size => 10 %></td>
      </tr>
      <tr><td><%= form.label :notes, "Location Notes:" %></td></tr>
      <tr><td colspan=2><%= form.text_area :notes, :size => '40x3' %></td></tr>
      <tr>
        <%= submit_tag form_submit %>
      </tr>
    </table>
  <% end %>
</div>
