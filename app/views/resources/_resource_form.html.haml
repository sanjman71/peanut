- @resource = resource
- form_for(@resource, :url => submit_url, :method => :post) do |f|

  .span-15.prepend-1.mat.padding-top-10.padding-bottom-10
    %h2= title
  
  %hr.space

  .span-13.prepend-1
    = display_flash(:all)
    
  -# name
  .span-15.prepend-1.last
    .span-2.padding-top-10
      %h2= label_tag "resource_name", "Name"
    .span-12.last
      = text_field_tag "resource[name]", @resource.name, :class => 'text title big required', :style => "width: 250px;"
  
  %hr.space

  .span-14.prepend-1.last.submit
    = submit_tag(action)
    == or
    = link_to "Cancel", providers_path(:subdomain => current_subdomain), :class => 'admin'
