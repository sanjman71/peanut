-# add schedule with links to dates
#provider_schedule
  .toolbar
    %h1== Provider Schedule
    = link_to 'Back', '#', :class => 'back'
    = link_to 'Home', '#home', :class => 'button'

  %ul.plastic
    - daterange.each do |day|
      - day_name = (day == today) ? 'Today' : day.to_s(:appt_day_short)
      %li.arrow= link_to day_name, "#provider_schedule_#{day.to_s(:appt_schedule_day)}"

  -# info reset on page load
  .info== Provider Schedule

-# add specific dates
- daterange.each do |day|
  %div.schedule_date{:id => "provider_schedule_#{day.to_s(:appt_schedule_day)}", :date => day.to_s(:appt_schedule_day)}
    .toolbar
      %h1== Daily Schedule
      = link_to 'Back', '#', :class => 'back'
      = link_to 'Home', '#home', :class => 'button'

    %ul.edgetoedge
      %li== Schedule for #{day.to_s(:appt_day_short)}

    %ul.plastic.schedule
      %li.loading== Loading Schedule ...

    -# add privilege checks later
    %ul.individual
      %li.arrow= link_to 'Add Appointment', "#add_work_appointment"

    -# info reset on page load
    .info== Provider Schedule