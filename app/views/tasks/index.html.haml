- title("Tasks")

.span-16
  .span-15.append-2
    .span-15.prepend-1.last.mat.padding-top-10.padding-bottom-10
      %h2== Tasks

    %hr.space

    .span-16.last.letterbox#task_appointment_messages
      .span-5.prepend-1.name
        %h3.margin-bottom-0== Appointment Messages
      .span-10.last
        - ['whenever'].each do |ts|
          %span{:style => 'padding-right: 7px;'}= link_to ts, task_appt_messages_path(:time_span => ts.to_url_param), :class => 'admin'
        
    .span-16.last.letterbox#task_appointment_reminders
      .span-5.prepend-1.name
        %h3.margin-bottom-0== Appointment Reminders
      .span-10.last
        - ['24 hours', '2 days', '3 days', '7 days'].each do |ts|
          %span{:style => 'padding-right: 7px;'}= link_to ts, task_appt_reminders_path(:time_span => ts.to_url_param), :class => 'admin'

    .span-16.last.letterbox#task_user_messages
      .span-5.prepend-1.name
        %h3.margin-bottom-0== User Messages
      .span-10.last
        - ['whenever'].each do |ts|
          %span{:style => 'padding-right: 7px;'}= link_to ts, task_user_messages_path(:time_span => ts.to_url_param), :class => 'admin'

    .span-16.last.letterbox#task_expand_all_recurrences
      .span-5.prepend-1.name
        %h3.margin-bottom-0== Expand All Recurrences
      .span-10.last
        %span{:style => 'padding-right: 7px;'}= link_to "Expand All Recurrences", task_expand_recur_path, :class => 'admin'
