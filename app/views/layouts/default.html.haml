!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title== Appointments: #{controller.action_name}
    = stylesheet_link_tag 'peanut'
    = stylesheet_link_tag 'errors'
    = stylesheet_link_tag 'green'
    = yield :stylesheet
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    = javascript_include_tag 'jquery', 'jquery.selectboxes', 'application'
    = yield :javascript
    
  %body
    #header
      .login_info
        = render :partial => 'users/user_bar'
      %h1= link_to @current_company.name, :action => :show, :controller => 'companies', :subdomain => @current_company.subdomain
      - unless @current_company.locations.empty?
        Choose location:
        = select_tag('location_id', options_for_select([['Any location', 0]] + @current_company.locations.collect{ |l| [location_title_renderer(l), l.id]}, @current_company.id))
      #tabs
        %ul
          %li.right
            = link_to 'Admin Console', companies_path(:subdomain => nil)
          - build_tab_links(controller) do |link|
            %li.with_space= link
            
    %p{:style => "color: green"}
      = flash[:notice]
    %p{:style => "color: red"}
      = flash[:error]

    .wrapper
      = yield
  
  
