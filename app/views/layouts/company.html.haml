!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title
      = "#{@current_company.name} -"
      = yield :title
    %meta{:name => 'robots', :content => 'nofollow, noindex'}
    = stylesheet_link_tag 'blueprint/screen'
    = stylesheet_link_tag 'peanut'
    = stylesheet_link_tag 'errors'
    = stylesheet_link_tag 'green'
    = yield :stylesheet
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    = javascript_include_tag 'jquery', 'jquery.selectboxes', 'application'
    = yield :javascript
    
  %body
    #header
      .container
        .span-21
          %h2= @current_company.name
        .span-3.last{:style => 'color: #DDDDDD;'}
          = render :partial => 'users/user_bar'
        #tabs
          .span-21
            %ul
            - build_tab_links(controller) do |tab|
              %li.with_space= tab
              
          - if has_privilege?('create company')
            .span-3.last
              %ul
                %li
                  = link_to 'Admin Console', companies_path(:subdomain => nil)
            
    - if RAILS_ENV == 'development'
      .container.showgrid
        = yield
    - else
      .container
        = yield