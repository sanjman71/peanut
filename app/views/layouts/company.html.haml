!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title
      = "#{@current_company.name} -"
      = yield :title
    %meta{:name => 'robots', :content => 'nofollow, noindex'}
    = stylesheet_link_tag 'blueprint/screen'
    = stylesheet_link_tag 'peanut'
    = stylesheet_link_tag 'errors'
    = stylesheet_link_tag 'green'
    = yield :stylesheet
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    = javascript_include_tag 'jquery', 'jquery.selectboxes', 'jquery.validate', 'application'
    = yield :javascript
    
  %body
    #header
      .container
        .span-24.last
          .span-7{:class => "locations_count_#{@current_company.locations.size}"}
            - if @current_company.locations.size > 1
              -# allow user to change the current location
              %ul#location_switcher
                %li
                  #location_switcher_link= link_to 'Change Location', '', :class => 'admin header'
                  %ul
                    - build_location_links(@current_company, @current_location) do |name, link, is_last|
                      = link_to name, link, :class => 'admin header'
                      = "&nbsp;|&nbsp;" unless is_last
            - else
              - # no locations, fill span with something
              .empty== &nbsp;
              
          .span-6.prepend-11.last{:style => 'color: #DDDDDD; text-align: right;'}
            = render :partial => 'users/user_links.html.haml'
            
        .span-24.last
          .span-19
            %h2#company_name{:style => 'color: #FFFFFF;'}
              -# show company name; include location name if its appropriate
              = company_location_title(@current_company, @current_location)
          .span-5.last.text-align-right
            - if logged_in?
              = render(:partial => 'users/user_whoami.html.haml')
              
        .span-24#tabs
          .span-21
            %ul
            - build_tab_links(controller) do |tab|
              %li.with_space= tab
              
          - if has_privilege?('create company')
            .span-3.last
              %ul
                %li
                  = link_to 'Admin Console', companies_path(:subdomain => nil)
            
    -#%p{:style => "color: green"}
      -#= flash[:notice]
    -#%p{:style => "color: red"}
      -#= flash[:error]

    - if RAILS_ENV == 'development'
      .container.showgrid
        = yield
    - else
      .container
        = yield
