!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title
      = "#{current_company.name} -"
      = yield :title
    %meta{:name => 'robots', :content => 'nofollow, noindex'}
    = stylesheet_link_tag 'blueprint/screen', :media=>"screen, projection"
    = stylesheet_link_tag 'blueprint/print', :media =>"print"
    <!--[if IE]>
    = stylesheet_link_tag 'blueprint/ie', :media =>"screen, projection"
    <![endif]-->
    = stylesheet_link_tag 'peanut', 'errors', 'green'
    = stylesheet_link_tag 'peanut_print', :media => "print"
    = yield :stylesheet
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    = javascript_include_tag 'jquery', 'jquery.selectboxes', 'jquery.validate', 'jquery.corners', 'application'
    = yield :javascript
    
  %body
    #header
      .container
        .span-24.last
          .span-10.prepend-14.last{:style => 'color: #DDDDDD; text-align: right;'}
            = render :partial => 'users/user_links.html.haml'
            
        .span-24.last
          .span-19
            %h2#company_name{:style => 'color: #FFFFFF;'}
              = link_to current_company.name, root_path(:subdomain => current_subdomain)
          .span-5.last.text-align-right
            - if logged_in?
              = render(:partial => 'users/user_whoami.html.haml')
              
        .span-24#tabs
          .span-21
            %ul
            - build_tab_links(controller) do |tab|
              %li.with_space= tab
              
          .span-3.last.text-align-right
            %ul
            - build_admin_tab_links do |tab|
              %li= tab
            
    .container{:class => $BlueprintGrid ? 'showgrid' : ''}
      .flash.prepend-1.span-14
        = display_flash(:all) if global_flash?
      = yield
