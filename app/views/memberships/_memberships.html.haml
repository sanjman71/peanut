- memberships.sort_by{ |m| m.resource.name }.each do |membership|
  .span-20.prepend-1.last.membership{:class => cycle("shaded", "")}
    .span-4.person
      %h3= membership.resource.name
    .span-1.last.action
      = link_to("Remove", membership_path(membership, :subdomain => current_subdomain), :class => 'admin ujs delete')
- unless @non_members.blank?
  .span-20.prepend-1.last.add_user
    = select_tag('resource_id', options_for_select([['Add a resource to this service', 0]] + non_members.sort_by{ |o| o.name }.collect{ |o| [o.name, [o.id, o.class].join(",")]}, 0))
    
