%table.memberships
  - memberships.sort_by{ |m| m.resource.name }.each do |membership|
    %tr{:class => cycle("shaded", "")}
      %td.person
        = membership.resource.name
      %td.action
        = link_to("Remove", membership_path(membership), :class => 'admin ujs delete')
  - unless @non_members.blank?
    %tr.add_user
      %td{:colspan => 2, :style => "padding-top: 10px;"}
        = select_tag('person_id', options_for_select([['Add a person to this service', 0]] + non_members.collect{ |o| [o.name, o.id]}, 0))
    