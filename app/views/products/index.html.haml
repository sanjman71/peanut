- stylesheet('products')
- javascript('products')

.span-17
  .span-15.last.box
    %h2== Products
  %hr.space
  .span-15.prepend-1.append-1.last
    .highlight#flash
  #products
    = render(:partial => 'products.html.haml', :locals => {:products => @products})
    
.span-6.prepend-1.last
  .sidebar.padding-5
    - form_for(Product.new, :url => products_path(:subdomain => @subdomain), :method => :post, :html => {:class => 'new_product'}) do |f|
      = hidden_field_tag "product[price]", 0
      = hidden_field_tag "product[inventory]", 0
      %p
        = label_tag "add_product_name", "Add a new product", :class => 'big'
        = text_field_tag "product[name]", '', :id => 'add_product_name', :class => 'title big', :style => 'width: 200px;'
        %em{:style => "color: #666666;"}== Examples: Shampoo, Styling Gel
      %p
      = submit_tag "Create", :name => nil
    
        
