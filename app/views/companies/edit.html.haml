.span-20.box
  %h2
    == Editing
    = @company.name

  - form_for(@company) do |f|
    = f.error_messages
  
    .span-19.prepend-1.last
      .span-3
        %h2== Timezone:
      .span-5.last
        = f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, {}, {:style => 'margin-top: 5px;', :class => 'select big'}
    %hr.space
    .span-19.prepend-1.last
      .span-5
        = f.submit 'Update', :class => 'button big'
        == or
        = link_to 'Cancel', companies_path, :style => 'font-size: 12px;'
    %hr.space
  %h2
    == Company locations
  = render :partial => 'locations/locations', :object => @company.locations.paginate(:page => params[:locations_page]), :locals => {:may_edit_parent  => @may_edit_parent, :locatable => @company}
