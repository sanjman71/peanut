<h1>Editing company</h1>

<% form_for(@company) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @company %> |
<%= link_to 'Back', companies_path %>

<h2>Company locations</h2>
<%= render :partial => 'locations/locations', :object => @company.locations.paginate(:page => params[:locations_page]), :locals => {:may_edit_parent  => @may_edit_parent, :locatable => @company} %>
