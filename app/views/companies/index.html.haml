- title('Admin Console')

.span-24
  .span-23.prepend-1.last.mat.padding-top-10.padding-bottom-20
    %h2== Companies
    
  %hr.space
  
  .span-15.prepend-1
    = display_flash(:all)
  
  %hr.space

  .span-15.prepend-1
    %h3{:style => 'color: #5500BB; font-weight: bold;'}
      .span-3== Companies:
      = @companies.size
      %hr.space{:style => 'margin-bottom: 7px;'}
      .span-3== Billing Errors:
      = @billing_errors.size
      
  .span-15.prepend-1.append-1.last
    .highlight#flash
    
  #companies
    = render(:partial => 'companies.html.haml', :locals => {:companies => @companies})

